<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:threebyte="clr-namespace:ThreeByte.Controls">

    <Style TargetType="{x:Type threebyte:DesignerItemsControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type threebyte:DesignerItemsControl}">
                    <Grid Background="{TemplateBinding Background}" >
                        <Canvas IsItemsHost="True" x:Name="PART_Canvas"  />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>